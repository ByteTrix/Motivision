{
  "manifest_version": 2,
  "name": "Motivision",
  "version": "1.1",
  "description": "A minimal new tab where Motivation meets Minimalism.",
  "author": "Kxvin",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://api.unsplash.com/*",
    "https://api.quotable.io/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "128": "icons/icon-128.png"
    }
  }
}
