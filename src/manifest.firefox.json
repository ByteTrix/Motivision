{
  "manifest_version": 3,
  "name": "Motivision",
  "version": "1.1",
  "description": "A minimal new tab where Motivation meets Minimalism.",
  "author": "Kxvin",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.unsplash.com/*",
    "https://api.quotable.io/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}