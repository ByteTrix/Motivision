{
  "manifest_version": 3,
  "name": "Motivision",
  "version": "1.1",
  "description": "Transform your new tab with motivational quotes and stunning backgrounds.",
  "author": "Kxvin",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.unsplash.com/*",
    "http://api.quotable.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Motivision"
  }
}
