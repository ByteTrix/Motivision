{
  "manifest_version": 3,
  "name": "Minimal New Tab",
  "version": "1.0",
  "description": "A minimalist new tab with motivational quotes and beautiful backgrounds.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.unsplash.com/*",
    "https://api.quotable.io/*"
  ],
  "icons": {
    "48": "icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ]
}
